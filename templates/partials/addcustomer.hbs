<!-- Add Department Modal -->
<div id="add_department" class="modal custom-modal fade" role="dialog">
					<div class="modal-dialog modal-dialog-centered" role="document">
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title">Add Customer</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Close">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<form name="RegForm">
									<div class="form-group">
										<label>Customers Name <span class="text-danger">*</span></label>
										<input class="form-control" id="cname" type="text" placeholder="Customers Name" >
									</div>
									<div class="form-group">
										<label>Billing Name <span class="text-danger">*</span></label>
										<input class="form-control" id="bname" type="text" placeholder="Billing Name" >
									</div>
									<div class="form-group">
										<label>Address <span class="text-danger">*</span></label>
										<textarea rows="5" cols="5" id="address" class="form-control" placeholder="Address" style="height: 125px;" ></textarea>
									</div>
									<div class="form-group">
										<label>Contact No. <span class="text-danger">*</span></label>
										<input class="form-control" id="cno"  type="tel"  placeholder="1234-56-7890" pattern="[0-9]{4}-[0-9]{2}-[0-9]{4}"  >
									</div>
									<div class="form-group">
										<label>Email Id. <span class="text-danger">*</span></label>
										<input class="form-control" id="email" placeholder="Email" type="email" >
									</div>
									<div class="form-group">
										<label>Gst No. <span class="text-danger">*</span></label>
										<input class="form-control" id="gno" placeholder="Gst No"  type="text" >
									</div>
									<div class="form-group">
										<label>Pan No. <span class="text-danger">*</span></label>
										<input class="form-control" id="pno" placeholder="Pan No" type="text" >
									</div>
									<p id="error2" class="text-center text-danger"></p>
									<div class="submit-section">
										<button class="btn btn-primary submit-btn" onclick="addcustomer()">Submit</button>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
